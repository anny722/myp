<div class="container">
  <%= link_to 'New', new_book_path, class: 'btn btn-primary' %>
  <div class="cards">
    <% @books.each do |book| %>
      <div class="card" style="width: 18rem;">
          <img class='card-img-top' src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />

        <%#= image_tag book.photo, class: 'card-img-top' %>
        <div class="card-body">
          <h5 class="card-title"><%= book.name %></h5>
          <p class="card-text"><%= book.author %></p>
          <%= link_to 'Details', book_path(book), class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
